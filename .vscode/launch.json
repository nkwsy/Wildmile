{
  "version": "0.2.0",
  "resolveSourceMapLocations": [
    "${workspaceFolder}/wildmile/**",
    "!wildmile/node_modules/**"
  ],
  "configurations": [
    {
      "name": "Launch Chrome",
      "request": "launch",
      "type": "chrome",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "Next.js: debug server-side",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev"
    },
    {
      "name": "Next.js: debug client-side",
      "type": "chrome",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "webRoot": "${workspaceFolder}/wildmile",
      "url": "http://localhost:3000",
      "runtimeArgs": ["--inspect"],

      "trace": true
    },
    {
      "name": "Next.js: debug full stack",
      "type": "node-terminal",
      "request": "launch",
      "cwd": "${workspaceFolder}/wildmile",
      "command": "npm run dev",
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,

      "serverReadyAction": {
        "action": "debugWithChrome",
        "killOnServerStop": true,
        "pattern": "- Local:.+(https?://.+)",
        "uriFormat": "%s",
        "webRoot": "${workspaceFolder}/wildmile"
      }
    },
    {
      "name": "Next.js: Simple debug full stack",
      "type": "node-terminal",
      "request": "launch",
      "cwd": "${workspaceFolder}/wildmile",
      "command": "npm run dev",
      "sourceMaps": true,
      "serverReadyAction": {
        "webRoot": "${workspaceFolder}/wildmile",
        "pattern": "- Local:.+(https?://.+)",
        "uriFormat": "%s",
        "action": "debugWithChrome"
      }
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Docker",
      "port": 9229,
      "address": "localhost",
      "localRoot": "${workspaceFolder}/wildmile",
      "remoteRoot": "/usr/app/",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Attach to Chrome",
      "url": "http://localhost:3000",
      "request": "launch",
      "type": "chrome",
      "webRoot": "${workspaceFolder}/wildmile"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/wildmile/components/projects/plant_map.js"
    },
    {
      "type": "node-terminal",
      "name": "JavaScript Debug Terminal",
      "request": "launch",
      "cwd": "${workspaceFolder}"
    }
  ]
}
