extends layout

block content
  .page-header
    h3 Modules

  button.btn.btn-primary(type='button' data-toggle='modal' data-target='#newmod')
    | New Module

  .pb-2.mt-2.mb-4.border-bottom

  //#map(style='opacity: 0.95;')

  .media
    #modMap.container.overflow-auto(data-mods=mods data-plantedPlants= plantedPlants)
  #newmod.modal.fade(tabindex='-1' role='dialog' aria-labelledby='newmod' aria-hidden='true')
    .modal-dialog.modal-xl(role='document')
      .modal-content
        .modal-header
          h5#exampleModalLongTitle.modal-title Module Control
          button.close(type='button' data-dismiss='modal' aria-label='Close')
            span(aria-hidden='true') &times;
        .modal-body
          form(id='mod-form', method='POST')
              input(type='hidden', name='_csrf', value=_csrf)
              .row.col-sm
                .form-group.col-sm
                  label(for='x') Module X coordinate (along the seawall)
                  input.form-control(type='number' id='x' name='x')
                .form-group.col-sm
                  label(for='y') Module Y coordinate (distance from the seawall)
                  input.form-control(type='number' id='y' name='y')
                .form-group.col-sm
                  label(for='locationCode') Side of Seawall
                  input.form-control( placeholder='E' id='locationCode' name='locationCode')
              .row.col-sm
                .form-group.col-sm
                  label(for='model') Model
                  select.form-control(id='model' name='model')
                    option 3-d
                    option 4-d
                    option 5-d
                    option fwm dock 20 footer
                    option fwm dock 24 footer
                .form-group.col-sm
                  label(for='shape') Shape and size
                  select.form-control(id='shape' name='shape')
                    option R3
                    option R2.3
                    option T3
                    option T2.3
                .form-group.col-sm
                  label(for='orientation') Angled Orientation
                  select.form-control(id='orientation' name='orientation')
                    option flat
                    option RH
                    option LH
              .form-group
                label(for='notes') Notes
                textarea.form-control(rows='3' id='notes' name='notes')
              input(type='hidden' name='individualPlants' id='individualPlants' )
              .row
                #circle_1.col-lg-1
